// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Listing {
    id        String   @id @default(cuid())
    userId String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name String
    description String
    price Float
    message Message[]@relation("userMessage")

}

model Message{
    id String @id @default(cuid())
    fromUser String
    fromUserName String
    listingId String
    message String
    listing Listing @relation("userMessage", fields: [listingId], references: [id])
}

model ParkingLocation{
    id Int @id @default(autoincrement())
    name String
    location String
    parkingSpace ParkingSpaces[]@relation("userParking")
}
model ParkingSpaces{
    id Int @id @default(autoincrement())
    parkingNumber String
    status String
    parkingId Int
    parking ParkingLocation @relation("userParking", fields: [parkingId], references: [id])
}

